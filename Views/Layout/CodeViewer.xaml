<UserControl x:Class="ZNSO_Notepad.Views.Layout.CodeViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <Border Padding="10" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="8" Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Background="White">
            <TextBox x:Name="CodeTextBox"
                     FontFamily="Consolas"
                     FontSize="14"
                     Foreground="#333333"
                     Background="White"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     AcceptsTab="True"
                     TextWrapping="NoWrap"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     Text="Loading..." />
        </ScrollViewer>
    </Border>
</UserControl>
