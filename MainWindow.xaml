<Window x:Class="ZNSO_Notepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:ZNSO_Notepad.Views.Controls"
        xmlns:layout="clr-namespace:ZNSO_Notepad.Views.Layout"
        Title="ZNSO Notepad"
        Height="800" Width="1200"
        Background="#FFF6F0FF"
        WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <BlurEffect x:Name="EFFECT_Blur" KernelType="Gaussian" Radius="5"/>
    </Window.Effect>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#E6F0FA"
                CornerRadius="0,0,8,8"
                Margin="0,0,0,4"
                BorderBrush="#C4DAEA" BorderThickness="0,0,0,1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Menu x:Name="MenuBar" Background="Transparent" Height="34" Padding="10,0" Foreground="#2A3F54">
                <MenuItem Header="ðŸ“ File">
                    <MenuItem Header="ðŸ“‚ Open..." Click="BtnLoadWorkspace_Click"/>
                    <MenuItem Header="ðŸ’¾ Save" Click="BtnSaveWorkspace_Click"/>
                    <Separator/>
                    <MenuItem Header="âŒ Exit" Click="Close"/>
                </MenuItem>
                <MenuItem Header="ðŸ” View">
                    <MenuItem Header="ðŸ“œ Show History Board" Click="ShowHistoryBoard_Click"/>
                    <MenuItem Header="ðŸ§¾ Show Code" Click="ShowCodeViewer_Click"/>
                    <MenuItem Header="ðŸª² Show Debug Console" Click="ShowDebugConsole_Click"/>
                    <MenuItem Header="ðŸŽ¨ Themes">
                        <MenuItem Header="ðŸŒž Light" Click="ChangeThemeLight_Click"/>
                        <MenuItem Header="ðŸŒ™ Dark" Click="ChangeThemeDark_Click"/>
                        <MenuItem Header="ðŸ–¥ï¸ System Default" Click="ChangeThemeSystem_Click"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="ðŸ”§ Settings">
                    <MenuItem Header="ðŸŒˆ Theme" Click="BtnChangeTheme_Click"/>
                    <MenuItem Header="âš™ï¸ Preferences" Click="BtnOpenPreferences_Click"/>
                </MenuItem>
            </Menu>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#DCEEFF"
                    BorderBrush="#B0CBE3"
                    BorderThickness="0,0,1,0"
                    CornerRadius="0,8,8,0"
                    Padding="6">
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                    <Button Content="ðŸ–Šï¸" ToolTip="Pen Tool" Width="40" Height="40"
                            Background="#EDF6FF" BorderBrush="#BFDFF1" BorderThickness="1"
                            Click="PenTool_Click"/>
                    <Button Content="ðŸ§½" ToolTip="Eraser Tool" Width="40" Height="40" Margin="0,4,0,0"
                            Background="#EDF6FF" BorderBrush="#BFDFF1" BorderThickness="1"
                            Click="EraserTool_Click"/>
                    <Separator Height="6"/>
                    <Button Content="ðŸ“" ToolTip="Add TextEdit" Width="40" Height="40"
                            Background="#EDF6FF" BorderBrush="#BFDFF1" BorderThickness="1"
                            Click="BtnTextEditTool_Click"/>
                    <Button Content="ðŸ–¼ï¸" ToolTip="Add IVBar" Width="40" Height="40" Margin="0,4,0,0"
                            Background="#EDF6FF" BorderBrush="#BFDFF1" BorderThickness="1"
                            Click="BtnIVBarTool_Click"/>
                </StackPanel>
            </Border>

            <ScrollViewer x:Name="WorkspaceScrollViewer"
                          Grid.Column="1"
                          Background="#EDF6FF"
                          PanningMode="Both"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Canvas x:Name="WorkspaceCanvas"
                            Width="11334" Height="6398"
                            ClipToBounds="True"
                            Margin="20"
                            SnapsToDevicePixels="True"
                            MouseLeftButtonDown="WorkspaceCanvas_MouseLeftButtonDown"
                            MouseMove="WorkspaceCanvas_MouseMove"
                            MouseLeftButtonUp="WorkspaceCanvas_MouseLeftButtonUp"/>

                    <Canvas x:Name="SubWorkspaceCanvas"
                            Width="11334" Height="6398"
                            ClipToBounds="True"
                            Margin="20"
                            SnapsToDevicePixels="True"
                            IsHitTestVisible="False"/>
                </Grid>
            </ScrollViewer>

            <GridSplitter Grid.Column="2"
                          Width="5"
                          Background="#B0CBE3"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"
                          Cursor="SizeWE"/>

            <ContentControl x:Name="RightPanelContent"
                            Grid.Column="3"
                            Background="#E6F0FA"
                            Margin="6"
                            Padding="6"
                            />
        </Grid>

        <Grid Grid.Row="2" Height="200" Background="#E6F0FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <GridSplitter Grid.Row="0"
                          Height="5"
                          Background="#B0CBE3"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          ResizeDirection="Rows"
                          ShowsPreview="True"
                          Cursor="SizeNS"/>

            <ContentControl x:Name="BottomPanelContent"
                            Grid.Row="1"
                            Background="#EDF6FF"
                            Margin="6"
                            Padding="6"/>
        </Grid>
    </Grid>
</Window>
